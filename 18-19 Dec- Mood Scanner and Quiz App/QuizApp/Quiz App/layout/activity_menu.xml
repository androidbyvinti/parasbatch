<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.android.quizapp.MenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/quiz_loading"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/architects_daughter"
        android:text="Quiz App"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30dp"
        android:textStyle="bold"
        />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">

    <Button
        android:id="@+id/cButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="C"
        android:layout_weight="1"
        android:background="@color/colorSunFlower"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:fontFamily="@font/architects_daughter"/>

    <Button
        android:id="@+id/cPlusButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="C++"
        android:layout_weight="1"
        android:background="@color/colorOrange"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:fontFamily="@font/architects_daughter"/>

    <Button
        android:id="@+id/javaButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Java"
        android:layout_weight="1"
        android:background="@color/colorCarrot"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:fontFamily="@font/architects_daughter"/>

    <Button
        android:id="@+id/kotlinButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Kotlin"
        android:layout_weight="1"
        android:background="@color/colorPumpkin"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:fontFamily="@font/architects_daughter"/>

    <Button
        android:id="@+id/androidButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Android"
        android:layout_weight="1"
        android:background="@color/colorAlizarin"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:fontFamily="@font/architects_daughter"/>
    </LinearLayout>

</LinearLayout>